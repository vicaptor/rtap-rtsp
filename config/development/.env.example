# RTSP Server Configuration
RTSP_SERVER_PORT=8554
RTSP_HLS_PORT=8888
RTSP_AUTH_ENABLED=false
RTSP_USERNAME=admin
RTSP_PASSWORD=admin

# Annotation Service Configuration
NODE_ENV=development
PORT=3000
MONGODB_URI=mongodb://mongodb:27017/rtap
REDIS_URI=redis://redis:6379
JWT_SECRET=development_secret_key
CORS_ORIGIN=http://localhost:8080

# API Gateway Configuration
NGINX_PORT=8080
NGINX_SSL_PORT=8443
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/server.crt
SSL_CERTIFICATE_KEY_PATH=/etc/nginx/ssl/server.key

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin_password
MONGO_INITDB_DATABASE=rtap

# Redis Configuration
REDIS_PASSWORD=redis_password

# Monitoring Configuration
PROMETHEUS_RETENTION_PERIOD=15d
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
